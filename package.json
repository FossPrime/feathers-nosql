{
  "name": "feathers-nosql",
  "version": "0.0.0",
  "description": "A NoSQL database adapter for feathers, batteries included.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "test": "npx pnpx tsx test/index.test.ts",
    "build": "tsup"
  },
  "keywords": [
    "pwa",
    "feathers",
    "nosql",
    "mongodb",
    "nedb",
    "lowdb"
  ],
  "author": "Ray Foss",
  "license": "MIT",
  "dependencies": {
    "@feathersjs/adapter-commons": "^4.4.3",
    "@feathersjs/commons": "^4.4.3",
    "@feathersjs/errors": "^4.4.3",
    "sift": "^11.0.10"
  },
  "devDependencies": {
    "@feathersjs/adapter-tests": "^4.5.15",
    "@feathersjs/feathers": "^4.5.15",
    "@types/node": "18",
    "node-test": "^1.4.6",
    "tsup": "^6.3.0",
    "tsx": "^3.11.0"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "prettier": "@github/prettier-config",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "sourcemap": true,
    "clean": true,
    "dts": true
  }
}
